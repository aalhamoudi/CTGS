{
    "routes": {
        "application": {
            "root": {
                "path": "/",
                "method": "root"
            }
        },
        "users": {
            "create": {
                "path": "/users/new?params#:tags",
                "method": "create"
            },
            "get": {
                "path": "/users/:id/get",
                "method": "get"
            },
            "update": {
                "path": "/users/:id/update?:tags",
                "method": "update"
            },
            "delete": {
                "path": "/users/:id/delete",
                "method": "delete"
            }
        }
    }
}